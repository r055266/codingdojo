*{
	font-family: Arial, Verdana;
	color: black;
}
html{
    background: #f5f5f5;
}
body{
    margin:0px auto;
    width: 980px;
    border-left: 1px solid #888888;
    border-right: 1px solid #888888;
    padding: 10px;
    box-shadow: 0 0 5px;
    background: white;
    margin-top: 20px;
}
h2{
    background: #cecece;
    border: 1px solid black;
    color: #039911;
    margin: 0px;
    padding: 5px 10px;
    box-shadow: 0 0 2px 2px #888888;
    border-radius: 6px;
    
}
h3{
    color: blue;
    margin: 0px;
}
p.signature{
    font-style:italic;
}