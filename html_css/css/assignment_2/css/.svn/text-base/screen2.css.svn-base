*{
	font-family: Verdana;
}
body{
	margin: 0px;
	padding: 0px;
}
h1, h2, h3, h4, a, a:link, a:visited {
	color: #990000;
}
h2{
	font-size: 16px ;
}
h3{
	font-size: 14px ;
}
h4{
	font-size: 12px ;
}
p, ul, ol{
	font-size: 10pt;
}
.right{
	float: right;
}
.left{
	float: left;
}
.clear{
	clear: both;
}
.bold{
	font-weight: bold;
}
#wrapper{
	margin: 0px auto;
}
#top_bar{
	background: #670602;
	height: 72px;
}
	#top_bar h1{
		display: inline;
		color: white;
		font-family: "Lucida Console", Monaco, monospace;
		font-weight: normal;
		font-size: 22px;
}
#logo{
	width: 287px;
	margin: 0px;
	padding: 0px;
}
#logo img{
	width: 287px;
	height: 72px;
}
#slogan{
	width: 400px;
	margin-left: 5px;
	padding-top: 25px;
}
	#slogan h1{
		display: inline;
		color: white;
		font-family: "Lucida Console", Monaco, monospace;
		font-weight: normal;
	}
#text_size_change p{
	font-size: 9pt;
	margin: 5px 0px;
}
#search{
	width: 500px;
	margin-right: 30px;
}
	#search a, #search a:link, #search a:visited{
		color: #fccc63;
	}
	#search p{
		color: white;
	}
	#search input[type=submit]{
		background: #670602;
		color: white;
		border: 2px solid white;
}	
#search_form{
	padding-left: 70px;
}

#nav{
	border-top: 1px solid #b4b4b4;
	border-bottom: 1px solid #b4b4b4;
	padding: 5px 0px;
	background: #dfdfdf;
}
	#nav ul, #nav ul li{
		display: inline;
	}
	#nav ul li a{
		padding: 10px 10px;
		font-weight: bold;
		color: #666666;
		text-decoration: none;
	}
	#nav .nav_pipe{
		color: #b4b4b4;
		font-size: 14pt;
	}
#left_bar{
	margin: 20px;
	border: 1px solid #b4b4b4;
	background:#dfdfdf;
	width: 165px;
	padding: 0px 5px;
}
	#left_bar ul{
		padding: 0px 20px;
	}
	#left_bar ul li{
		margin: 10px 0px;
		list-style-image: url('../images/double_arrow.gif');
	}
#right_content{
	margin: 5px;
	width: 680px;
}
.freebsd_intro{
	border-bottom: 3px solid grey;
}
.latest_news{
	border-bottom: 3px solid grey;
}